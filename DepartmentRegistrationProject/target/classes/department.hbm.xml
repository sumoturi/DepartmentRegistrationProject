<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.java.demo.bo">

	<class name="DepartmentDO" table="DEPARTMENTS">
		<id name="deptId" column="DEPARTMENT_ID">
			<generator class="assigned" />
		</id>
		<property name="deptName" column="DEPARTMENT_NAME" />
		<property name="mgrId" column="MANAGER_ID" />
		<property name="locId" column="LOCATION_ID" />

	</class>
</hibernate-mapping>